{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "outDir": "./dist/nuenenen",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@core/*": [
        "./app/core/*"
      ],
      "@home/*": [
        "./app/home/*"
      ],
      "@abteilung/*": [
        "./app/abteilung/*"
      ],
      "@shared/*": [
        "./app/shared/*"
      ],
      "@environment/*": [
        "./environments/*"
      ],
    }
  }
}
